@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model OrcaStarsWebApplication.ViewModels.ApplicationViewModel
@{
    ViewData["Title"] = "Business Form";
    Layout = "_Layout";
}

<body>
    <h1>Orca Stars Business Application</h1>
    <form enctype="multipart/form-data" asp-controller="admin" asp-action="index" method="post">
        <!-- enctype="multipart/form-data" allows us to use IFormFile-->
        <h3>Contact Information</h3>

        <label>First Name:</label>
        <input asp-for="FirstName" type="text" name="FirstName" placeholder="First Name" />
        <span asp-validation-for="FirstName"></span>
        <br />
        <label>Last Name:</label>
        <input asp-for="LastName" type="text" name="LastName" placeholder="Last Name" />
        <span asp-validation-for="LastName"></span>
        <br />
        <label>Phone Number:</label>
        <input asp-for="PhoneNumber" type="text" name="PhoneNumber" placeholder="Phone Number" />
        <span asp-validation-for="PhoneNumber"></span>
        <br />
        <label>Email:</label>
        <input asp-for="Email" type="text" name="Email" placeholder="email@example.com" />
        <span asp-validation-for="Email"></span>
        <br />
        <h3>Business Information</h3>

        <label>Name:</label>
        <input asp-for="BusinessName" type="text" name="BusinessName" placeholder="Business Name">
        <br />
        <label>Description:</label>
        <textarea asp-for="Description" placeholder="Business Description"></textarea>
        <br />
        <label>Category:</label>
        <select asp-for="Category" id="socialmedia">
            <option>
                Restaurants
            </option>
            <option>
                Bars & Nightlife
            </option>
            <option>
                Health & Medicine
            </option>
            <option>
                Shopping
            </option>
            <option>
                Auto
            </option>
            <option>
                Home Maintenance
            </option>
            <option>
                Professional Services
            </option>
            <option>
                Auto
            </option>
            <option>
                Hotels & Travel
            </option>
            <option>
                Pets
            </option>
            <option>
                Financial Service
            </option>
            <option>
                Mass Media
            </option>
            <option>
                Education
            </option>
        </select>
       
        <br />
        <label>Website:</label>
        <input asp-for="Website" type="text" name="Website" placeholder="Business Website">
        <br />
        <label>Address 1:</label>
        <input asp-for="AddressLine1" type="text" name="Address" placeholder="Business Address">
        <br />
        <label>Address 2:</label>
        <input asp-for="AddressLine2" type="text" name="Address" placeholder="Business Address">
        <br />
        <label>City:</label>
        <input asp-for="City" type="text" name="City" placeholder="City">

        <label>State:</label>
        <input asp-for="State" type="text" name="State" placeholder="State">

        <label>Zip:</label>

        <input asp-for="Zip" type="text" name="Zip" placeholder="Zip Code">
        <br />
        <br />


        <label>Social Media Platform:</label>
        <br />
        <select asp-for="SocialMedia" id="socialmedia">
            <option>Facebook</option>
            <option>Instagram</option>
            <option>Twitter</option>
        </select>
        <label>Handle:</label>
        <input asp-for="Handle" type="text" name="Handle" placeholder="Handle">
        <input type="submit" class="add-btn" value="+ Add">
        <input type="submit" class="remove-btn" value="- Remove">
        <br />
        <br />


        <select asp-for="SocialMedia" id="socialmedia">
            <option>Facebook</option>
            <option>Instagram</option>
            <option>Twitter</option>
        </select>
        <label>Handle:</label>
        <input asp-for="Handle" type="text" name="Handle" placeholder="Handle">
        <input type="submit" class="add-form-btn" value="+ Add">
        <input type="submit" class="remove-btn" value="- Remove">
        <br />
        <br />


        <label>Hours:</label>
        <input type="submit" class="upload-btn" value="Choose File">

        <label>Logo:</label>
        <input type="submit" class="upload-btn" value="Choose File">
        <br />
        <br />
        <input type="submit" class="submit-form-btn" value="Submit">

    </form>

</body>
